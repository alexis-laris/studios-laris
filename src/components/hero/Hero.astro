---
import thumbs from "@/assets/imgs/thumbs.png";
import "./Hero.css";
---

<section
    class="relative w-full min-h-screen bg-black flex items-center justify-center overflow-hidden px-4 sm:px-6 md:px-8 lg:px-12"
    id="inicio"
>
    <img
        src={thumbs.src}
        alt="Thumbs Background"
        class="absolute inset-0 w-full h-full object-cover opacity-30 mix-blend-screen pointer-events-none animate-bgPulse"
    />

    <div class="relative z-10 w-full max-w-7xl mx-auto text-center select-none">
        <div class="mb-6 sm:mb-5 md:mb-6">
            <span
                class="text-[#05f2af] tracking-[0.15em] sm:tracking-[0.2em] text-xs sm:text-sm md:text-base lg:text-lg inline-block"
            >
                ✦ CREATIVITY & CODE ✦
            </span>
        </div>

        <h1
            class="relative text-white font-anton italic uppercase leading-[1.15] sm:leading-[0.95] md:leading-[0.85] text-[16vw] sm:text-[14vw] md:text-[11vw] lg:text-[9vw] xl:text-[8vw] shine-title mb-8 sm:mb-7 md:mb-8"
        >
            STUDIOS <span
                class="italic text-[#05f2af] block sm:inline mt-3 sm:mt-0"
                >LARIS</span
            >
            <span class="shine-effect"></span>
        </h1>

        <div
            class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 md:gap-5 select-none"
        >
            <a
                href="#servicios"
                class="w-full sm:w-auto italic font-bold text-white border border-white/40 px-7 sm:px-9 md:px-11 py-2.5 md:py-3 text-sm sm:text-base relative transition-all duration-300 hover:text-[#05f2af] hover:border-[#05f2af] rounded-full overflow-hidden before:absolute before:inset-0 before:bg-white/5 before:-skew-x-6 before:transition-all before:duration-300 hover:before:bg-[#05f2af]/10 before:rounded-full hover:scale-105 active:scale-95"
            >
                <span class="relative z-10 inline-block">Servicios</span>
            </a>

            <a
                href="#contacto"
                class="w-full sm:w-auto italic font-bold text-[#05f2af] border border-[#05f2af]/40 px-7 sm:px-9 md:px-11 py-2.5 md:py-3 text-sm sm:text-base relative transition-all duration-300 hover:text-white hover:border-white rounded-full overflow-hidden before:absolute before:inset-0 before:bg-[#05f2af]/10 before:-skew-x-6 before:transition-all before:duration-300 hover:before:bg-white/10 before:rounded-full hover:scale-105 active:scale-95"
            >
                <span class="relative z-10 inline-block">Contacto</span>
            </a>
        </div>
    </div>

    <div
        class="absolute inset-0 pointer-events-none mix-blend-overlay opacity-40 bg-linear-to-b from-transparent via-[#05f2af]/20 to-transparent blur-3xl"
    >
    </div>

    <div
        class="absolute bottom-0 inset-x-0 h-1/2 pointer-events-none bg-linear-to-t from-[#8435F2]/40 via-[#8435F2]/20 to-transparent"
    >
    </div>
</section>
