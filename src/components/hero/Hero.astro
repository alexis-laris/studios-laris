---
import thumbs from "@/assets/imgs/thumbs.png";
import "./Hero.css";
---

<section
    class="relative w-full min-h-screen bg-black flex items-start justify-center overflow-hidden px-4 sm:px-6 md:px-8 lg:px-12 pt-32 sm:pt-36 md:pt-40 lg:pt-44 pb-20"
    id="inicio"
>
    <img
        src={thumbs.src}
        alt="Thumbs Background"
        class="absolute inset-0 w-full h-full object-cover opacity-30 mix-blend-screen pointer-events-none animate-bgPulse"
    />

    <div class="relative z-10 w-full max-w-6xl mx-auto text-center select-none">
        <div class="mb-10 md:mb-14">
            <span
                class="text-[#05f2af] tracking-[0.25em] text-base sm:text-lg md:text-xl lg:text-2xl inline-block"
            >
                ✦ CREATIVITY & CODE ✦
            </span>
        </div>

        <h1
            class="relative text-white font-anton italic uppercase leading-none text-[22vw] sm:text-[20vw] md:text-[16vw] lg:text-[12vw] xl:text-[11rem] 2xl:text-[13rem] shine-title mb-12 md:mb-16 lg:mb-20"
        >
            STUDIOS <span
                class="italic text-[#05f2af] block sm:inline mt-5 sm:mt-0"
                >LARIS</span
            >
            <span class="shine-effect"></span>
        </h1>

        <div
            class="flex flex-col sm:flex-row items-center justify-center gap-3 sm:gap-4 md:gap-5 select-none"
        >
            <a
                href="#servicios"
                class="w-full sm:w-auto italic font-bold text-white border border-white/40 px-10 py-3 text-base relative transition-all duration-300 hover:text-[#05f2af] hover:border-[#05f2af] rounded-full overflow-hidden before:absolute before:inset-0 before:bg-white/5 before:-skew-x-6 before:transition-all before:duration-300 hover:before:bg-[#05f2af]/10 before:rounded-full hover:scale-105 active:scale-95"
            >
                <span class="relative z-10 inline-block">Servicios</span>
            </a>

            <a
                href="#contacto"
                class="w-full sm:w-auto italic font-bold text-[#05f2af] border border-[#05f2af]/40 px-10 py-3 text-base relative transition-all duration-300 hover:text-white hover:border-white rounded-full overflow-hidden before:absolute before:inset-0 before:bg-[#05f2af]/10 before:-skew-x-6 before:transition-all before:duration-300 hover:before:bg-white/10 before:rounded-full hover:scale-105 active:scale-95"
            >
                <span class="relative z-10 inline-block">Contacto</span>
            </a>
        </div>
    </div>

    <div
        class="absolute inset-0 pointer-events-none mix-blend-overlay opacity-40 bg-linear-to-b from-transparent via-[#05f2af]/20 to-transparent blur-3xl"
    >
    </div>

    <div
        class="absolute bottom-0 inset-x-0 h-1/2 pointer-events-none bg-linear-to-t from-[#8435F2]/40 via-[#8435F2]/20 to-transparent"
    >
    </div>
</section>
