---
import { Phone, MessageSquare } from "lucide-astro";
---

<section class="w-full min-h-screen grid md:grid-cols-2" id="contacto">
    <div
        class="bg-white w-full h-full flex flex-col items-center justify-center px-6 md:px-16 py-20 md:pt-32 text-center"
    >
        <h1
            class="relative text-[#05F2AF] font-anton uppercase leading-none text-[6vw] md:text-[5vw] italic"
        >
            CONTACTO
        </h1>

        <div
            class="flex flex-col items-center justify-center max-w-md w-full space-y-10"
        >
            <div class="space-y-3 mt-6">
                <h2 class="text-lg font-bold text-[#11071F] uppercase">
                    Información de Contacto
                </h2>
                <p class="text-gray-600 text-md leading-relaxed">
                    Puedes comunicarte por WhatsApp escaneando el código o
                    haciendo clic en el botón.
                </p>
            </div>

            <div
                class="bg-[#11071F] border-b-4 border-[#05F2AF] p-8 rounded-4xl shadow-xl backdrop-blur
                   text-center w-full max-w-sm flex flex-col items-center gap-10"
            >
                <div class="space-y-4">
                    <h3 class="text-2xl text-[#05F2AF] uppercase">WhatsApp</h3>

                    <p
                        class="text-gray-300 text-base tracking-wide flex items-center justify-center gap-2"
                    >
                        <Phone class="w-5 h-5 text-[#05F2AF]" />
                        +52 449 572 9599
                    </p>

                    <img
                        src="https://api.qrserver.com/v1/create-qr-code/?size=180x180&data=https://wa.me/524495729599"
                        alt="QR WhatsApp"
                        class="mx-auto rounded-3xl shadow-lg p-6 hover:scale-[1.05] transition-all cursor-pointer"
                    />

                    <a
                        href="https://wa.me/524495729599"
                        class="italic font-bold text-[#05f2af] border border-[#05f2af]/40 px-10 py-3 relative transition-all duration-300
                       hover:text-white hover:border-white rounded-4xl overflow-hidden
                       before:absolute before:inset-0 before:bg-[#05f2af]/10 before:-skew-x-6
                       before:transition-all before:duration-300 hover:before:bg-white/10 before:rounded-4xl block"
                    >
                        Enviar Mensaje
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div
        class="bg-[#11071F] w-full h-full flex items-center justify-center px-6 md:px-16 py-16"
    >
        <form
            class="bg-white rounded-3xl p-10 w-full max-w-lg shadow-2xl space-y-6"
        >
            <h2
                class="text-3xl font-bold text-[#11071F] text-center uppercase mb-6 font-anton italic leading-none"
            >
                Enviar Mensaje
            </h2>

            <div class="space-y-2">
                <label class="text-sm text-gray-700">Nombre</label>
                <input
                    type="text"
                    class="w-full bg-gray-100 border border-gray-300 px-4 py-3 rounded-xl focus:outline-none focus:border-[#05F2AF]"
                    placeholder="Tu nombre completo"
                />
            </div>

            <div class="space-y-2">
                <label class="text-sm text-gray-700">Correo</label>
                <input
                    type="email"
                    class="w-full bg-gray-100 border border-gray-300 px-4 py-3 rounded-xl focus:outline-none focus:border-[#05F2AF]"
                    placeholder="ejemplo@correo.com"
                />
            </div>

            <div class="space-y-2">
                <label class="text-sm text-gray-700">Mensaje</label>
                <textarea
                    rows="5"
                    class="w-full bg-gray-100 border border-gray-300 px-4 py-3 rounded-xl focus:outline-none focus:border-[#05F2AF]"
                    placeholder="Escribe tu mensaje aquí"></textarea>
            </div>

            <button
                type="submit"
                class="w-full
        italic font-bold text-[#11071F]
        border border-[#11071F]/40
        px-10 py-3
        relative transition-all duration-300
        hover:text-[#11071F] hover:border-[#11071F]
        hover:shadow-[0_0_12px_#11071F30]
        rounded-3xl overflow-hidden
        before:absolute before:inset-0 before:bg-[#11071F]/10 before:-skew-x-6
        before:transition-all before:duration-300 hover:before:bg-[#11071F]/30 hover:before:scale-110 before:rounded-3xl
        flex items-center justify-center gap-2 cursor-pointer select-none"
            >
                <MessageSquare class="w-5 h-5" /> Enviar
            </button>
        </form>
    </div>
</section>
