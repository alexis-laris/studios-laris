---
import img1 from "../../assets/imgs/miniaturas/1.webp";
import img2 from "../../assets/imgs/miniaturas/2.webp";
import img3 from "../../assets/imgs/miniaturas/3.webp";
import img4 from "../../assets/imgs/miniaturas/4.webp";
import img5 from "../../assets/imgs/miniaturas/5.webp";
import img6 from "../../assets/imgs/miniaturas/6.webp";
import img7 from "../../assets/imgs/miniaturas/7.webp";
import img8 from "../../assets/imgs/miniaturas/8.webp";
import img9 from "../../assets/imgs/miniaturas/9.webp";
import img10 from "../../assets/imgs/miniaturas/10.webp";
import img11 from "../../assets/imgs/miniaturas/11.webp";
import img12 from "../../assets/imgs/miniaturas/12.webp";

const proyectos = [
    "PUBLIQUE EL NUMERO DE FEDE",
    "ROMPI LA NUEVA PANTALLA DE FEDE",
    "JUGANDO POPPY PLAYTIME",
    "HACKS DE TIK TOK",
    "PERDI DINERO HACIENDO ESTO",
    "LE FUI INFIEL A MI PAREJA",
    "TERROR EN ROBLOX",
    "TRADING EN VIVO",
    "GOMITAS GIGANTES",
    "BOLA GIGANTE NOS INVADE",
    "DIBUJANDO AL ALFA",
    "ELIGEN MI DIA",
];

const imgs = [
    img1,
    img2,
    img3,
    img4,
    img5,
    img6,
    img7,
    img8,
    img9,
    img10,
    img11,
    img12,
];
---

<section class="relative w-full bg-white py-20 px-6 md:px-12" id="trabajos">
    <div class="mb-6 text-center select-none">
        <span
            class="text-[#11071F] tracking-[0.25em] text-sm sm:text-base md:text-lg uppercase"
        >
            ✦ EJEMPLOS PROFESIONALES ✦
        </span>
        <h1
            class="relative text-[#11071F] font-anton uppercase text-[15vw] sm:text-[11vw] md:text-[8vw] lg:text-[6vw] shine-title whitespace-nowrap px-4"
        >
            MIS <span class="text-[#05F2AF] italic">TRABAJOS</span>
        </h1>
    </div>

    <div
        class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-12 select-none"
    >
        {
            proyectos.map((nombre, i) => (
                <div class="relative overflow-hidden rounded-3xl aspect-video group shadow-xl cursor-pointer border border-[#11071F]">
                    <img
                        src={imgs[i].src}
                        alt={`Miniatura ${i + 1}`}
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />

                    <div class="absolute bottom-0 left-0 right-0 h-full bg-linear-to-t from-black/80 via-black/40 to-transparent translate-y-full group-hover:translate-y-0 transition-transform duration-500 ease-out flex items-end p-6 pointer-events-none">
                        <span class="text-white font-bold text-xl">
                            {nombre}
                        </span>
                    </div>
                </div>
            ))
        }
    </div>

    <div class="mt-12 flex justify-center">
        <a
            href="#seemore"
            class="w-full max-w-[200px] italic font-bold text-[#11071F] border border-[#11071F]/40 px-10 py-3 relative transition-all duration-300 hover:text-[#11071F] hover:border-[#11071F] hover:shadow-[0_0_12px_#11071F30] rounded-3xl overflow-hidden before:absolute before:inset-0 before:bg-[#11071F]/10 before:-skew-x-6 before:transition-all before:duration-300 hover:before:bg-[#11071F]/30 hover:before:scale-110 before:rounded-3xl flex items-center justify-center gap-2 cursor-pointer select-none"
        >
            <span class="inline-block">Ver más</span>
        </a>
    </div>
</section>
